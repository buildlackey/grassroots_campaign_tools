{
  "compilerOptions": {
    "target": "ES5",                          // ⬅️ Required: GAS only supports ES5
    "module": "CommonJS",                    // ⬅️ Required: for Webpack bundling
    "moduleResolution": "Node",              // ⬅️ Node-style resolution works with CommonJS
    "outDir": "build/unit_testable_js",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["ES2015"],                       // ⬅️ Avoid modern APIs not available in ES5
    "types": ["google-apps-script", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/FilterUICode.js"]
}

