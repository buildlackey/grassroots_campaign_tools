{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "build/unit_testable_js", // tsc transpile'd js files - not GAS safe, but testable
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["ESNext"],
    "types": ["google-apps-script", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/FilterUICode.js"]  // âœ… Prevent TypeScript from touching it
}

